<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.markusressel.datamunch">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".application.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppThemeLight">

        <activity android:name=".view.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".view.activity.preferences.PreferenceOverviewActivity"
            android:parentActivityName=".view.activity.MainActivity" />

        <activity
            android:name=".view.fragment.account.user.UserDetailActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".view.fragment.account.group.GroupDetailActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".view.fragment.jail.jail.JailDetailActivity"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity android:name=".view.fragment.storage.disk.DiskDetailActivity" />
        <activity android:name=".view.fragment.storage.snapshot.SnapshotDetailActivity" />

        <service android:name=".service.FileUploadService" />

        <activity
            android:name=".view.activity.UnknownErrorDialog"
            android:excludeFromRecents="true"
            android:label="@string/unknown_error"
            android:noHistory="true"
            android:process=":UnknownErrorDialog"
            android:theme="@style/Theme.AppCompat.Dialog"
            android:windowSoftInputMode="adjustPan">
            <!-- Intents are sent explicitly to this class, no need to specify an intent filter -->
        </activity>
        <activity android:name=".view.fragment.storage.scrubs.ScrubDetailActivity" />
        <activity android:name=".view.fragment.storage.task.TaskDetailActivity" />
        <activity android:name=".view.fragment.system.alert.AlertDetailActivity" />
        <activity android:name=".view.fragment.sharing.afp.AfpShareDetailActivity" />
        <activity android:name=".view.fragment.sharing.cifs.CifsShareDetailActivity" />
        <activity android:name=".view.fragment.sharing.nfs.NfsShareDetailActivity" />
        <activity android:name=".view.fragment.plugins.PluginDetailActivity" />


    </application>

</manifest>