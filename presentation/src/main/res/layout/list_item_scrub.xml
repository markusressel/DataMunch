<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="item"
            type="de.markusressel.datamunch.data.persistence.entity.ScrubEntity" />

        <variable
            name="presenter"
            type="de.markusressel.datamunch.view.fragment.storage.ScrubsFragment" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/cardview_padding">

        <android.support.v7.widget.CardView
            style="@style/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    style="@style/sub_header"
                    android:text="@string/volume" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@{item.scrub_volume}"
                    android:textColor="?android:textColorPrimary"
                    android:textSize="18sp" />

                <TextView
                    style="@style/sub_header"
                    android:text="@string/description" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@{item.scrub_description}"
                    android:textColor="?android:textColorPrimary"
                    android:textSize="18sp" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</layout>