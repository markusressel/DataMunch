<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/material_view_pager_placeholder" />

        <android.support.v7.widget.CardView style="@style/detail_content_cardview">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <CheckBox
                    android:id="@+id/enabledCheckBox"
                    style="@style/sub_header_content_textview"
                    android:text="@string/enabled" />

                <TextView
                    style="@style/sub_header"
                    android:text="@string/name" />

                <TextView
                    android:id="@+id/nameTextView"
                    style="@style/sub_header_content_textview" />

                <CheckBox
                    android:id="@+id/recursiveCheckBox"
                    style="@style/sub_header_content_textview"
                    android:text="@string/recursive" />

                <TextView
                    style="@style/sub_header"
                    android:text="@string/interval" />

                <TextView
                    android:id="@+id/intervalTextView"
                    style="@style/sub_header_content_textview" />

                <TextView
                    style="@style/sub_header"
                    android:text="@string/retCount" />

                <TextView
                    android:id="@+id/retCountTextView"
                    style="@style/sub_header_content_textview" />

                <TextView
                    style="@style/sub_header"
                    android:text="@string/repeat_unit" />

                <TextView
                    android:id="@+id/repeatUnitTextView"
                    style="@style/sub_header_content_textview" />

                <TextView
                    style="@style/sub_header"
                    android:text="@string/begin" />

                <TextView
                    android:id="@+id/beginTextView"
                    style="@style/sub_header_content_textview" />

                <TextView
                    style="@style/sub_header"
                    android:text="@string/end" />

                <TextView
                    android:id="@+id/endTextView"
                    style="@style/sub_header_content_textview" />

                <TextView
                    style="@style/sub_header"
                    android:text="@string/by_weekday" />

                <TextView
                    android:id="@+id/byWeekDayTextView"
                    style="@style/sub_header_content_textview" />

                <TextView
                    style="@style/sub_header"
                    android:text="@string/filesystem" />

                <TextView
                    android:id="@+id/filesystemTextView"
                    style="@style/sub_header_content_textview" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>