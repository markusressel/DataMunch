<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/detail_content_margin_top">

            <include layout="@layout/material_view_pager_placeholder" />

            <android.support.v7.widget.CardView style="@style/detail_content_cardview">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        style="@style/sub_header"
                        android:text="@string/id" />

                    <TextView
                        android:id="@+id/idTextView"
                        style="@style/sub_header_content_textview" />

                    <TextView
                        style="@style/sub_header"
                        android:text="@string/name" />

                    <TextView
                        android:id="@+id/nameTextView"
                        style="@style/sub_header_content_textview" />

                    <TextView
                        style="@style/sub_header"
                        android:text="@string/status" />

                    <TextView
                        android:id="@+id/statusTextView"
                        style="@style/sub_header_content_textview" />

                    <TextView
                        style="@style/sub_header"
                        android:text="@string/ipv4" />

                    <TextView
                        android:id="@+id/ipv4TextView"
                        style="@style/sub_header_content_textview" />

                    <TextView
                        style="@style/sub_header"
                        android:text="@string/mac" />

                    <TextView
                        android:id="@+id/macTextView"
                        style="@style/sub_header_content_textview" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <!-- placed after other layouts so it will be drawn on top -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/material_view_pager_placeholder" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/startStopButton"
                    style="@style/fab_style"
                    android:layout_gravity="end"
                    android:layout_marginEnd="24dp"
                    app:layout_anchorGravity="top|right|end" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</android.support.v4.widget.NestedScrollView>