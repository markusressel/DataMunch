<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto">

    <de.mrapp.android.preference.EditTextPreference
        android:inputType="textUri"
        android:key="@string/connection_host_key"
        android:summary="@string/connection_host_summary"
        android:title="@string/connection_host_title"
        custom:showValueAsSummary="true" />

    <PreferenceCategory
        android:key="category_connection"
        android:title="@string/category_connection_ssh">

        <de.mrapp.android.preference.EditTextPreference
            android:inputType="text"
            android:key="@string/connection_ssh_user_key"
            android:summary="@string/connection_ssh_user_summary"
            android:title="@string/connection_ssh_user_title"
            custom:showValueAsSummary="true" />

        <EditTextPreference
            android:inputType="textPassword"
            android:key="@string/connection_ssh_password_key"
            android:summary="@string/connection_ssh_password_summary"
            android:title="@string/connection_ssh_password_title" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="category_connection"
        android:title="@string/category_connection_ssh_proxy">

        <de.mrapp.android.preference.EditTextPreference
            android:inputType="textUri"
            android:key="@string/connection_ssh_proxy_host_key"
            android:summary="@string/connection_ssh_proxy_host_summary"
            android:title="@string/connection_ssh_proxy_host_title"
            custom:showValueAsSummary="true" />

        <de.mrapp.android.preference.DigitPickerPreference
            android:key="@string/connection_ssh_proxy_port_key"
            android:max="65535"
            android:summary="@string/connection_ssh_proxy_port_summary"
            android:title="@string/connection_ssh_proxy_port_title"
            custom:numberOfDigits="5"
            custom:showValueAsSummary="true"
            custom:unit="" />

        <de.mrapp.android.preference.EditTextPreference
            android:inputType="text"
            android:key="@string/connection_ssh_proxy_user_key"
            android:summary="@string/connection_ssh_proxy_user_summary"
            android:title="@string/connection_ssh_proxy_user_title"
            custom:showValueAsSummary="true" />

        <EditTextPreference
            android:inputType="textPassword"
            android:key="@string/connection_ssh_proxy_password_key"
            android:summary="@string/connection_ssh_proxy_password_summary"
            android:title="@string/connection_ssh_proxy_password_title" />

    </PreferenceCategory>

</PreferenceScreen>