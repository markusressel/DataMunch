<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:key="category_general"
        android:title="@string/category_general">

        <de.mrapp.android.preference.activity.NavigationPreference
            android:breadCrumbTitle="Connection"
            android:fragment="de.markusressel.datamunch.view.fragment.preferences.ConnectionPreferences"
            android:summary="Server connection configuration"
            android:title="Connection" />

        <de.mrapp.android.preference.activity.NavigationPreference
            android:breadCrumbTitle="File Uploader"
            android:fragment="de.markusressel.datamunch.view.fragment.preferences.FileUploaderPreferences"
            android:summary="Settings related to uploading files"
            android:title="FileUploader" />

        <de.markusressel.datamunch.view.preferences.IntListPreference
            android:breadCrumbTitle="@string/theme_title"
            android:entries="@array/theme_names"
            android:entryValues="@array/theme_values"
            android:key="@string/theme_key"
            android:summary="Application Theme"
            android:title="@string/theme_title" />

        <de.markusressel.datamunch.view.preferences.IntListPreference
            android:breadCrumbTitle="@string/locale_title"
            android:entries="@array/locale_names"
            android:entryValues="@array/locale_values"
            android:key="@string/locale_key"
            android:summary="Application Language"
            android:title="@string/locale_title" />

    </PreferenceCategory>

</PreferenceScreen>